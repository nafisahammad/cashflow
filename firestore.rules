rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isTourMember(tourId) {
      return signedIn() &&
          request.auth.uid in get(/databases/$(database)/documents/tours/$(tourId)).data.members;
    }

    function isTourMemberAfter(tourId) {
      return signedIn() &&
          request.auth.uid in getAfter(/databases/$(database)/documents/tours/$(tourId)).data.members;
    }

    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    match /tours/{tourId} {
      allow create: if signedIn() &&
          request.resource.data.createdBy == request.auth.uid &&
          request.auth.uid in request.resource.data.members;
      allow read: if signedIn();
      allow update: if isTourMember(tourId) ||
          (signedIn() &&
           request.auth.uid in request.resource.data.members);
      allow delete: if signedIn() && resource.data.createdBy == request.auth.uid;

      match /members/{memberId} {
        allow read: if isTourMember(tourId);
        allow create, update: if isTourMemberAfter(tourId) &&
            request.resource.data.userId == memberId &&
            request.resource.data.tourId == tourId;
        allow delete: if false;
      }

      match /transactions/{transactionId} {
        allow read: if isTourMember(tourId);
        allow create: if isTourMember(tourId) &&
            request.resource.data.tourId == tourId &&
            request.resource.data.contributorId in get(/databases/$(database)/documents/tours/$(tourId)).data.members;
        allow update, delete: if false;
      }
    }
  }
}
